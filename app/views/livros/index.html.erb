<div class="max-w-3xl mx-auto mt-10">
  <h1 class="text-4xl font-bold mb-6">Livros</h1>

  <% if authenticated? %>
    <%= link_to "Novo Livro", new_livro_path,
        class: "inline-block mb-4 bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
  <% else %>
    <%= link_to "Login", new_session_path,
        class: "inline-block mb-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  <% end %>

  <div class="space-y-3">
    <% @livros.each do |livro| %>
      <div class="bg-white border border-gray-300 shadow-lg rounded-lg p-4 hover:shadow-xl hover:bg-gray-50 transition">
        <%= link_to livro.titulo, livro, class: "text-lg font-sans text-gray-800 hover:text-gray-600" %>
      </div>
    <% end %>
  </div>
</div>
